<h2>My <%= formatted_quarter_by_params %> Course Requests</h2>

<br />

<%= render 'num_courses' %>

<br />


<%= bootstrap_form_tag(url: { action: 'update_requests' },
		       method: :post) do %>
  <ul>
  <% @courses_bids.each do |c, b| %>
    <li>
      <%= c.number %> (<%= c.title %>)&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      <%= fields_for "bids[]", b do |f| %>
	<%= f.select :preference, @num_courses_arr,
            selected: preference(b), hide_label: true, inline: true %>
      <% end %>
    </li>
  <% end %>
  </ul>

  <%= submit_tag "Change preferences", class: "btn btn-primary",
      data: { confirm: "Are you sure?" } %>
<% end %>
