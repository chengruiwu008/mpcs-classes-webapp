<%= bootstrap_form_tag(url: { action: 'update_requests' },
		       method: :post, layout: :horizontal,
		       control_col: "col-xs-2") do |f| %>
  <ul id="ranked" class="connected-sortable">
    <% @ranked_courses_bids.each do |c, b| %>
      <li>
	<%= f.select "preferences[#{c.id}]", @num_courses_arr,
	    selected: preference(b), label: "MPCS #{c.number} - #{c.title}",
	    inline: true, label_col: "col-sm-3" %>
      </li>
    <% end %>
  </ul>

  <br /><br />

  <ul id="unranked" class="connected-sortable">
    <% @unranked_courses_bids.each do |c, b| %>
      <li>
	<%= f.select "preferences[#{c.id}]", @num_courses_arr,
	    selected: preference(b), label: "MPCS #{c.number} - #{c.title}",
	    inline: true, label_col: "col-sm-3" %>
      </li>
    <% end %>
  </ul>
  <%= submit_tag "Change preferences", class: "btn btn-primary",
      data: { confirm: "Are you sure?" } %>
<% end %>
